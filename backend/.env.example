# DEBUG: En producción SIEMPRE debe ser False
DEBUG=False

# DJANGO_SECRET_KEY: Clave secreta de Django (OBLIGATORIA en producción)
# Generar con: python -c "import secrets; print(secrets.token_urlsafe(50))"
# EJEMPLO (NO USAR EN PRODUCCION):
DJANGO_SECRET_KEY=genera-tu-propia-clave-secreta-aqui

# DATABASE_URL: URL de PostgreSQL (Railway la proporciona automáticamente)
# EJEMPLO (NO USAR - Railway genera la suya):
DATABASE_URL=postgresql://user:password@host:port/database

# FIELD_ENCRYPTION_KEY: Clave Fernet para encriptar RUT/telefono (OBLIGATORIA)
# Generar con: python -c "from cryptography.fernet import Fernet; print(Fernet.generate_key().decode())"
# EJEMPLO (NO USAR EN PRODUCCION):
FIELD_ENCRYPTION_KEY=genera-tu-propia-clave-fernet-aqui

# Variables opcionales
CORS_ALLOWED_ORIGINS=https://tudominio.com
REDIS_URL=          # Para WebSockets en producción (Railway Redis)

# ALLOWED_HOSTS: Dominios permitidos (separados por coma)
ALLOWED_HOSTS=localhost,127.0.0.1
